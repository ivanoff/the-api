{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "sourceMap": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["./src/**/*.ts", "./lib.ts", "./router.ts"],
  "exclude": ["node_modules", ".vscode"]
}

